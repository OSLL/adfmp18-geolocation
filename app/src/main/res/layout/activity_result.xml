<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="ru.spbau.adfmp18_geolocation.CameraActivity">

    <TextView
        android:id="@+id/result_text"
        android:text="@string/this_is_a_match"
        android:textColor="@color/backgroundColour"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="@dimen/font_size_large"
        android:layout_weight="0.2"/>

    <ImageView
        android:id="@+id/result_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:src="@drawable/kazan_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:gravity="center">
        <Button
            android:id="@+id/res_to_main_button"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/main_menu"
            android:textSize="@dimen/font_size_medium"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/res_to_play_button"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/_continue"
            android:textSize="@dimen/font_size_medium"
            android:layout_weight="0.5"/>
    </LinearLayout>>

</LinearLayout>
